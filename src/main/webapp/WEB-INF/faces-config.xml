<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
	http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
        <navigation-rule>
        <description>register new user</description>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.add}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{user.add}</from-action>
            <from-outcome>unsuccess</from-outcome>
            <to-view-id>/unsuccess.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    
    <navigation-rule>
        <description>add city</description>
        <from-view-id>/admin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{city.add}</from-action>
            <from-outcome>output</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{city.add}</from-action>
            <from-outcome>invalid</from-outcome>
            <to-view-id>/failed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        
    <navigation-rule>
        <description>register vehicle</description>
        <from-view-id>/admin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{vehicle.add}</from-action>
            <from-outcome>output</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{vehicle.add}</from-action>
            <from-outcome>invalid</from-outcome>
            <to-view-id>/failed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>register route</description>
        <from-view-id>/admin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{route.add}</from-action>
            <from-outcome>output</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{route.add}</from-action>
            <from-outcome>invalid</from-outcome>
            <to-view-id>/failed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   
    
    <navigation-rule>
        <description>register journey</description>
        <from-view-id>/admin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{journey.add}</from-action>
            <from-outcome>output</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{journey.add}</from-action>
            <from-outcome>invalid</from-outcome>
            <to-view-id>/failed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <description>Display data</description>
        <from-view-id>/users.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{display.add}</from-action>
            <from-outcome>output</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{display.add}</from-action>
            <from-outcome>invalid</from-outcome>
            <to-view-id>/failed.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{track_journey.add}</from-action>
            <from-outcome>track</from-outcome>
            <to-view-id>/track.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{{track_journey.add}</from-action>
            <from-outcome>invalid</from-outcome>
            <to-view-id>/failed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <managed-bean>
        <managed-bean-name>trackBean</managed-bean-name>
        <managed-bean-class>com.dev.user.model.TrackJourney</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>    
</faces-config>
